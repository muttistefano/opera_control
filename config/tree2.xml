<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">
    <!-- ////////// -->
    <BehaviorTree ID="MainTree">
        <Repeat num_cycles="1000">
            <Sequence>
                <Condition ID="CheckBattery"/>
                <Action ID="OpenGripper"/>
                <Action ID="ApproachObject"/>
            </Sequence>
        </Repeat>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="ApproachObject"/>
        <Condition ID="CheckBattery"/>
        <Action ID="CloseGripper"/>
        <Action ID="OpenGripper"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

